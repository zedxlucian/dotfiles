+           stp = ++sts;
+   }
+   if (selmon->statushandcursor) {
+           selmon->statushandcursor = 0;
+           XDefineCursor(dpy, selmon->barwin, cursor[CurNormal]->cursor);
+   }
+   dwmblockssig = 0;
