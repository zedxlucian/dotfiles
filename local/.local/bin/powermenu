#!/bin/sh

chosen="$( printf "shutdown\nreboot\nlock\n" | dmenu -i -c -l 4 -bw 2 -nb "#D08770" -sf "#2E3440" -sb "#EBCB8B" -nf "#2E3440" -shb "#B48EAD" -shf "#2E3440" -nhb "#BF616A" -nhf "#2E3440" )"
case "$chosen" in
    "shutdown")
        sudo shutdown -h now
        ;;
    "reboot")
        sudo reboot
        ;;
    "lock")
        betterlockscreen -l blur
        ;;
esac
