#!/bin/sh

# If transmission-daemon is running, will ask to kill, else will ask to start.
if pidof "transmission-daemon" ;
then
	[ "$(printf "No\\nYes" | dmenu -i -p "Kill transmission-daemon?")" = "Yes" ] && sudo killall transmission-da && notify-send "transmission-daemon killed."
else
	ifinstalled transmission-cli || exit
	[ "$(printf "No\\nYes" | dmenu -i -p "Start transmission daemon?")" = "Yes" ] && transmission-daemon && notify-send "tranmission-daemon started."
fi
sleep 3
